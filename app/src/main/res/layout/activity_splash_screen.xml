<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.blackbracket.bitcoinmarket.SplashScreenActivity">


    <ImageView
        android:id="@+id/imgSuperMan"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerInParent="true"
        android:src="@drawable/supermanbitcoin" />


    <com.blackbracket.bitcoinmarket.widgets.CAnimTextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgSuperMan"
        android:layout_centerHorizontal="true"
        android:padding="@dimen/dimen_8dp"
        android:text="@string/bitcoin_market"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/dimen_32sp"
        app:charIncrease="1"
        app:font="@string/FrijoleRegular.ttf"
        app:typerSpeed="100" />
</RelativeLayout>
