<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="toolBarStyle" parent="@style/ThemeOverlay.AppCompat.Dark">
        <item name="actionMenuTextColor">@color/colorPrimary</item>
        <item name="android:actionMenuTextColor">@color/colorWhite</item>
    </style>

    <style name="txtOutgoing">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
        <item name="android:background">@drawable/chat_outgoing</item>
        <item name="android:paddingLeft">@dimen/dimen_16dp</item>
        <item name="android:paddingTop">@dimen/dimen_16dp</item>
        <item name="android:paddingBottom">@dimen/dimen_16dp</item>
        <item name="android:paddingRight">@dimen/dimen_32dp</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_16dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_16dp</item>
    </style>

    <style name="txtIncoming">
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textSize">@dimen/dimen_18sp</item>
        <item name="android:background">@drawable/chat_incoming</item>
        <item name="android:paddingLeft">@dimen/dimen_32dp</item>
        <item name="android:paddingTop">@dimen/dimen_16dp</item>
        <item name="android:paddingBottom">@dimen/dimen_16dp</item>
        <item name="android:paddingRight">@dimen/dimen_16dp</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_marginTop">@dimen/dimen_8dp</item>
        <item name="android:layout_marginBottom">@dimen/dimen_8dp</item>
        <item name="android:layout_marginLeft">@dimen/dimen_16dp</item>
        <item name="android:layout_marginRight">@dimen/dimen_16dp</item>
    </style>


    <style name="PauseDialogAnimation">
        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>
    </style>

</resources>
